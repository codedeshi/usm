<h1>Editing User</h1>

<form action="/users/<%=@user[:id]%>" method="post">
	<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
	<label>First Name: <input type="text" name="user[firstName]" value="<%=@user[:firstName]%>"></label>
	<label>Last Name: <input type="text" name="user[lastName]"  value="<%=@user[:lastName]%>"></label>
	<label>Email: <input type="email" name="user[email]" value="<%=@user[:email]%>"></label>
	<label>Password: <input type="password" name="user[password]" value="<%=@user[:password]%>"></label>
	<input type="submit" value = "Update" >
</form>
<a href="/users/<%= @user[:id]%>">Show</a>
 <a href="/">Back</a>